@model cp.Models.Livro
@{
    ViewData["Title"] = "Excluir Livro";
}

<h2>@ViewData["Title"]</h2>
<h4>Tem certeza que deseja excluir este livro?</h4>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Título</dt>
            <dd class="col-sm-9">@Model.Titulo</dd>

            <dt class="col-sm-3">Ano</dt>
            <dd class="col-sm-9">@Model.AnoPublicacao</dd>

            <dt class="col-sm-3">Autor</dt>
            <dd class="col-sm-9">@Model.Autor?.Nome</dd>

            <dt class="col-sm-3">Nacionalidade</dt>
            <dd class="col-sm-9">@Model.Autor?.Nacionalidade</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
